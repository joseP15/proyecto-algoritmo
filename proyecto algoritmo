void main()
{
	system("color 0F");
	int opcion, op;
	int clave=1234, contrasena;
	do{
		system("CLS");
		cout<<"---------WELCOME TO ECO-SOLVER----------"<<endl;
		cout<<"1.- Ingresar como Admin"<<endl;
		cout<<"2.- Ingresar como Usuario"<<endl;
		cout<<"0.- Salir"<<endl;
		cout<<"Digite una opcion: ";
		cin>>opcion;
	switch(opcion)
		{
		case 1: system("CLS");{
			cout<<"ingresar contrasena: ";
			cin>>contrasena;
			if (contrasena==clave){
				cout<<"contrasena correcta!!"<<endl;
				do{
				op=menu_Administrador();
				}while(op!=0);break;
		}	
		else {cout<<"contrasena incorrecta :( ";}
		}getch(); break;

   case 2: system("CLS");
	   do{
	   op=menu_Usuario();
	   }while(op!=0);break;

	case 0: break;
	default: cout<<"OPCION INVALIDA";
	}
	}while(opcion!=0);
	getch();
	//menuArchivos();
}

int menuArchivos()
{
	int opcion,op;
	do{
		system("CLS");
		cout<<"*******************************ARCHIVOS******************************"<<endl;
		cout<<"1. CLIENTE"<<endl;
		cout<<"2. RESERVAS"<<endl;
		cout<<"3. ESPECIES"<<endl;
		cout<<"4. VENTAS"<<endl;
		//cout<<"5. CLIENTE"<<endl;
		cout<<"0. ATRAS"<<endl;
		//opcion=generarOpcion();
		cout<<"Ingrese una opcion:  ";
		cin>>opcion;
		switch(opcion)
		{
		case 1: do{
					op=menuEmpresa();
				}while(op!=0);break;
		case 2: do{
					op=menuReserva();
				}while(op!=0);break;
		case 3: do{
					op=menuEspecie();
				}while(op!=0);break;
		case 4: do{
					op=menuVenta();
				}while(op!=0);break;
		/*case 5: do{
					op=menuCliente();
				}while(op!=0);break;*/
		case 0: return 0;break;
		default: cout<<"OPCION INCORRECTA";
		}
	}while(opcion!=0);
	return 1;
}
int menuEmpresa()
{
	
	int opcion;
	do{
		system("CLS");
		cout<<"****************CLIENTE****************"<<endl;
		cout<<"1. CREAR ARCHIVO"<<endl;
		cout<<"2. ADICIONAR"<<endl;
		cout<<"3. LISTAR"<<endl;
		cout<<"4. BUSCAR"<<endl;
		cout<<"5. MODIFICAR"<<endl;
		cout<<"6. BORRAR "<<endl;
		cout<<"0. ATRAS"<<endl;
		cout<<"OPCION:  ";
		cin>>opcion;
		switch(opcion)
		{
		case 1: system("CLS");crearArchivoEmpresa();getch();break;
		case 2: system("CLS");listarEmpresa();adicionarEmpresa();getch();break;
		case 3: system("CLS");listarEmpresa();getch();break;
		case 4: system("CLS");consultaEmpresa();getch();break;
		case 5: system("CLS");modificarEmpresa();getch();break;
		case 6: system("CLS");borrarEmpresa();getch();break;
		case 0: return 0;break;
		default: cout<<"OPCION INCORRECTA";
		}
	}while(opcion!=0);
	return 1;
}
